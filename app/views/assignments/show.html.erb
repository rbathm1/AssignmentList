<%- model_class = Assignment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @assignment.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:startDate) %>:</strong></dt>
  <dd><%= @assignment.startDate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dueDate) %>:</strong></dt>
  <dd><%= @assignment.dueDate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:complete) %>:</strong></dt>
  <dd><%= @assignment.complete %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              assignments_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_assignment_path(@assignment), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              assignment_path(@assignment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
