<%= form_for @assignment, :html => { :class => "form-horizontal assignment" } do |f| %>

  <% if @assignment.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @assignment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :startDate, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :startDate, :class => 'form-control' %>
    </div>
    <%=f.error_span(:startDate) %>
  </div>
  <div class="form-group">
    <%= f.label :dueDate, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :dueDate, :class => 'form-control' %>
    </div>
    <%=f.error_span(:dueDate) %>
  </div>
  <div class="form-group">
    <%= f.label :complete, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :complete, :class => 'form-control' %>
    </div>
    <%=f.error_span(:complete) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                assignments_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
